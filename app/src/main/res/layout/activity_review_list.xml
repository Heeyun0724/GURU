<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewList">
    <ImageView
        android:layout_width="93dp"
        android:layout_height="83dp" app:srcCompat="@drawable/main_cat1"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imageView4" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>
    <TextView
        android:text="REVIEW"
        android:fontFamily="@font/kotrabold"
        android:gravity="center"
        android:layout_width="278dp"
        android:layout_height="79dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/companyName3" android:layout_marginEnd="8dp"
         android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="36sp"
        android:textColor="@color/maincolor" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/textView2"
        android:gravity = "center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
        android:text="list"
        android:gravity="center"
        android:fontFamily="@font/kotrabold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/companyName3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"
        android:textColor="@color/maincolor"/>

</androidx.constraintlayout.widget.ConstraintLayout>