<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/kotrabold"
        android:text="리뷰 작성"
        android:textColor="@color/maincolor"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/reviewButton"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_background"
        android:drawableLeft="@drawable/review_icon"
        android:fontFamily="@font/kotrabold"
        android:paddingLeft="20dp"
        android:text="리뷰 작성"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypageCatView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/listButton"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_background"
        android:drawableLeft="@drawable/list_icon"
        android:fontFamily="@font/kotrabold"
        android:paddingLeft="20dp"
        android:text="리뷰 리스트"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewButton"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/mypageCatView"
        android:layout_width="111dp"
        android:layout_height="109dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/mypage_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kopubworlddotum"
        android:text="아이디"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/mypageCatView"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/kotrabold"
        android:text="[ 문냥 회원 아이디 ]"
        android:textColor="@color/maincolor"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/mypageCatView"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kopubworlddotum"
        android:gravity="center"
        android:text="등록된 리뷰를 참고해 책을 선택하고, \n리뷰를 작성함으로써 독서 습관을 길러봐요! "
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listButton"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>